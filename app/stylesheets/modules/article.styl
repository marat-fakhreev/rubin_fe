.grid-container
  ul.grid
    &.article-grid
      overflow: inherit

.article-title
  margin: 20px auto 0
  width: 955px
  height: 400px
  position: relative

  &::before
    content: ''
    display: block
    position: absolute
    top: 0px
    left: -7px
    z-index: 50

  &.academy
    &::before
      imgSprite(ribbon_academy)
  &.club
    &::before
      imgSprite(ribbon_club)
  &.kamaz
    &::before
      imgSprite(ribbon_kamaz)
  &.neftekhimik
    &::before
      imgSprite(ribbon_neftekhimik)
  &.rubin-2
    &::before
      imgSprite(ribbon_rubin_2)
  &.rubin-m
    &::before
      imgSprite(ribbon_rubin_m)
  &.team
    &::before
      imgSprite(ribbon_team)

  .image
    width: 100%
    height: 100%

  .text-container
    background-color: rgba($black, 0.5)
    height: 90px
    padding: 8px
    box-sizing: border-box
    position: absolute
    left: 0
    right: 0
    bottom: 0

    .title
      fontPageTitle()
      color: $white

    .shares
      &::before
        imgSprite(share_white)

.article-container
  margin: 30px 0 0 0
  fontBody()

  .title
    fontTitle()

  .posted
    color: $greyThree
    font-size: 16px
    margin: 0 0 15px 0

    span
      color: $red
      font-size: inherit
      margin: 0
      display: inline

  span
    display: block
    margin: 0 0 15px 0
    font-size: 20px
    line-height: 1.3

  p
    display: block
    margin: 0 0 20px 0

  .text-widget
    float: right
    width: 225px
    height: 100px
    background-color: black
    margin: 5px 0 25px 45px
