.footer
  width: 985px
  height: 740px
  margin: 0 auto

  .footer-widgets
    height: 305px
    background-color: $white
    box-shadow: 5px 5px 3px rgba($black, 0.3)
    position: relative

    .green-red-line
      imgSprite(green_red_ui_bottom)
      position: absolute
      left: 50%
      top: 0px
      margin-left: -530px
      z-index: 10

    .widgets
      imgSprite(widgets_bg)
      position: absolute
      left: 0
      right: 0
      bottom: 0
      height: 295px

    .widgets-container
      height: 225px
      margin: 35px 6px 35px 6px

      li
        height: 225px
        width: 225px
        float: left
        background-color: $red
        margin: 0px 9px

        &:last-child
          margin: 0px 9px 0px 10px

  .footer-sponsors
    margin: 38px 0 48px 0

    span
      fontTitle()
      margin: 0 15px
      font-size: 16px

    .line
      margin: 0 15px
      height: 70px

      &.line-one
        border-bottom: 1px solid $white
        margin: 0 33px

        .sponsor
          margin-left: 30px
          margin-right: 30px

      &.line-two
        margin-left: 170px

        .sponsor
          margin-left: 35px
          margin-right: 35px

    .sponsor
      position: relative
      top: 50%
      float: left

    .sponsor_ak_bank
      imgSprite(sponsor_ak_bank)
      margin-top: -15px

    .sponsor_eca
      imgSprite(sponsor_eca)
      margin-top: -18px

    .sponsor_fifa
      imgSprite(sponsor_fifa)
      margin-top: -15px

    .sponsor_mts
      imgSprite(sponsor_mts)
      margin-top: -15px

    .sponsor_puma
      imgSprite(sponsor_puma)
      margin-top: -13px

    .sponsor_rfs
      imgSprite(sponsor_rfs)
      margin-top: -20px

    .sponsor_russain_league
      imgSprite(sponsor_russain_league)
      margin-top: -19px

    .sponsor_sogaz
      imgSprite(sponsor_sogaz)
      margin-top: -15px

    .sponsor_taif
      imgSprite(sponsor_taif)
      margin-top: -20px

    .sponsor_tattelecom
      imgSprite(sponsor_tattelecom)
      margin-top: -22px

    .sponsor_tgc16
      imgSprite(sponsor_tgc16)
      margin-top: -20px

    .sponsor_uefa
      imgSprite(sponsor_uefa)
      margin-top: -19px

    .sponsor_viatti
      imgSprite(sponsor_viatti)
      margin-top: -7px


  .footer-text
    margin: 0 15px

    .copyright
      float: left
      fontGreyCaption()

    .footer-links
      float: right
      fontBlackCaption()

      li
        height: 15px
        margin-left: 7px
        border-left: 1px solid $black
        float: left

        a
          line-height: 15px
          margin-left: 7px

        &:first-child
          border-left: none
