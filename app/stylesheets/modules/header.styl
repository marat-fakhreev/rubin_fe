.header
  padding: 0 15px

  .header-top-part
    clearfix()
    background-color: #850010
    box-sizing: border-box
    padding: 97px 0 0 0

  .dropdown-menu-container
    position: absolute
    top: 100px
    left: 15px
    right: 15px
    z-index: 10
    width: 955px
    height: 0px
    overflow: hidden
    background-color: rgba($black, 0.7)
    transition: all 0.3s ease

    &::before
      content: ''
      position: absolute
      top: 10px
      left: 0
      width: 1100px
      height: 4px
      background-color: $green
      transform: rotate(1.3deg)

    &.active
      display: block
      height: 290px
      transition: all 0.3s ease

    .menu
      display: none

      &.active
        display: block

      > ul
        margin: 50px 0 0 0

        > li
          fontList()
          font-size: 20px
          padding: 0 0 0 10px
          color: $white
          display: block
          width: 225px
          height: 32px
          line-height: 40px
          border-bottom: 1px solid $white
          cursor: pointer

      a
        color: #fff

        &:hover
          color: $green

      .menu-item-content
        display: none
        position: absolute
        width: 540px
        height: 200px
        left: 250px
        top: 45px
        transition: opacity 1s ease

        ul
          li
            float: left
            width: 170px
            margin: 0 15px 0 0

            &:last-child
              margin-right: 0

        a
          fontBody()
          display: block
          color: $white

          &:hover
            color: $green

            .image
              transform: scale(1.2)
              transition: transform 0.5s ease

        .image-wrapper
          margin: 5px 0 10px 0
          width: 100%
          height: 95px
          overflow: hidden

        .image
          width: 100%
          height: 100%
          background-size: cover
          transform: scale(1)
          transition: transform 0.5s ease

        &.active
          transition: opacity 1s ease
          display: block
          opacity: 1

  .header-container
    position: relative
    min-height: 28px

    .green-top-line
      imgSprite(green_ui_line_top)
      position: absolute
      left: 50%
      bottom: -34px
      margin-left: -552px
      z-index: 10
