.login-container
  position: absolute
  right: 175px
  top: 0
  margin: 8px

  .buttons
    font-size: 12px
    color: $white

    .register-block
      float: left
      display: block

      &.hidden
        display: none

    .country
      margin: 0 40px 0 0
      position: relative

      &::before
        sprite(arrow_small_red_bottom)
        content: ''
        position: absolute
        right: -14px
        top: 2px

      &.active
        &::before
          sprite(arrow_small_red_top)

    .login-text
      color: $black
      display: none

      &.active
        display: block

    span
    a
      float: left
      display: block
      margin: 0 3px 0 0
      color: $white
      cursor: pointer

.sign-in-form
  width: 225px
  height: 270px
  background-color: rgba($black, 0.9)
  position: absolute
  right: 175px
  top: 40px
  margin: 0 8px 0 0
  padding: 10px
  box-sizing: border-box
  opacity: 0
  transition: opacity 0.3s ease-in-out
  zoom: 1
  display: none

  &.active
    zoom: 1
    opacity: 1
    transition: opacity 0.3s ease-in-out

  &.tt
    display: block

  label
    fontTitle()
    display: block
    font-size: 16px
    color: $white
    margin: 0 0 3px 0

  .errors-block
    .error
      display: none
      color: $red
      font-size: 16px
      margin: 0 0 5px 0

      &.visible
        display: block

  .social-block
    position: absolute
    bottom: 10px

    ul
      li
        float: left
        margin: 0 10px 0 0
        cursor: pointer

        &.fb
          imgSprite(icon_fb)

        &.tw
          margin: 5px 0 0 0
          imgSprite(icon_tw)

        &.vk
          imgSprite(icon_vk)

        &.google
          imgSprite(icon_google)
