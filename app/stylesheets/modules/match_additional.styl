.match-information
.match-result
  position: relative

  .match-inner
    min-height: 190px
    height: 190px
    overflow: hidden

    .match-container
      gradient($black, #414141)
      height: 100%
      background-color: grey
      transform: skewY(-1deg)
      position: relative
      top: -5px

      .match-slider
        width: 100%
        height: 125px
        padding: 40px 0
        transform: skewY(1deg)

    .green-bottom-line
      imgSprite(green_ui_line_bottom)
      position: absolute
      left: 50%
      bottom: -7px
      margin-left: -550px

  .rivals
    position: absolute
    left: 0
    top: 0
    right: 0
    bottom: 0

    .rivals-item
      position: absolute
      height: 100%
      padding: 10px 0 0 0
      box-sizing: border-box
      width: 150px
      text-align: center

      .image-wrapper
        width: 100%
        height: 100%
        line-height: 130px

      span
        position: absolute
        bottom: 0px
        text-align: center
        display: block
        width: 100%
        color: $white

      &:first-child
        left: 50px

      &:last-child
        right: 50px

  .match-item
    z-index: 10
    position: relative
    padding: 10px 0 0 0
    box-sizing: border-box
    height: 100%
    width: 100%

    .date
    .time
    .place
    .tickets
      fontPageTitle()
      display: block
      text-align: center

    .rivals
    .title
      margin: 0 auto

      .date
      .time
        color: $green

      .place
        margin: 3px 0 0 0
        color: $white
        font-size: 16px
        text-transform: none

      .tickets
        margin: 13px 0 0 0
        color: $red

