.current-match-information
.match-result
  position: relative

  .match-inner
    min-height: 190px
    height: 190px

    .match-container
      gradient($black, #414141)
      height: 100%
      background-color: grey
      transform: skewY(-1deg)
      position: relative
      top: -5px

    .match-slider
    .match-information
      width: 100%
      padding: 40px 0
      transform: skewY(1deg)

    .green-bottom-line
      imgSprite(green_ui_line_bottom)
      position: absolute
      left: 50%
      bottom: -7px
      margin-left: -550px

  .match-item
    clearfix()
    z-index: 10
    position: relative
    padding: 10px 0 0 0
    box-sizing: border-box
    height: 100%
    width: 100%

    .rivals
    .title
      margin: 0 auto

    .date
    .time
    .place
    .tickets
      fontPageTitle()
      display: block
      text-align: center

    .date
    .time
      color: $green

    .place
      margin: 3px 0 0 0
      color: $white
      font-size: 16px
      text-transform: none

    .tickets
      margin: 13px 0 0 0
      color: $red

  .rivals
    position: absolute
    left: 0
    top: 0
    right: 0
    bottom: 0

  .rivals-item
    position: absolute
    height: 100%
    padding: 10px 0 0 0
    box-sizing: border-box
    width: 150px
    text-align: center

    .logo-wrapper
      position: relative
      width: 100%
      height: 100px
      line-height: 130px

    span
      fontBody()
      position: absolute
      bottom: 0px
      text-align: center
      display: block
      width: 100%
      color: $white

    &:first-child
      left: 50px

    &:last-child
      right: 50px

.current-match-information
  margin: 0 0 60px 0
  position: relative

  .match-inner
    overflow: hidden
    min-height: 250px
    max-height: 250px
    transition: max-height 1s ease-in-out

    &.full
      height: auto
      max-height: 10000px
      transition: max-height 1s ease-in-out

    .match-information
      width: 100%
      overflow: hidden
      max-height: 420px
      padding: 40px 10px 0 10px
      margin: 40px 0
      transition: max-height 1s ease-in-out

      &.full
        height: auto
        max-height: 10000px
        transition: max-height 1s ease-in-out

  .match-item
    .current-date
    .match-time
    .live-text
      fontPageTitle()
      display: block
      text-align: center

    .current-date
    .live-text
      fontGreyCaption()
      font-size: 16px
      text-transform: none

    .match-time
      margin: 50px 0 0 0
      font-size: 75px
      text-shadow: 1px 1px 1px $black

    .live-text
      position: absolute
      left: 10px

  .rivals
    .current-rivals-item
      padding: 70px 0 0 0

      &:first-child
        left: 200px

      &:last-child
        right: 200px

  .score-item
    fontPageTitle()
    position: absolute
    font-size: 75px
    color: $white
    margin: 5px 0 0 0

    &.left-item
      float: left
      left: -90px

    &.right-item
      right: -90px

  .logo-wrapper
    span
      bottom: -15px

  .current-match-table-left
    width: 680px
    margin: 0 40px 0 0
    float: left
    background-color: $black

  .current-match-table-right
    width: 215px
    float: left
    background-color: $black

  .table-head
    fontTitle()
    height: 30px
    line-height: 30px
    font-size: 16px
    color: $white
    box-sizing: border-box
    border-bottom: 1px solid rgba($greyThree, 0.5)

  .half
    .half-head
      fontBody()
      height: 30px
      color: $white
      line-height: 30px

    .occasions-list
      li
        height: 60px
        background-color: $white
        border-bottom: 1px solid $red
        box-sizing: border-box

        &:last-child
          border-bottom: none

        &:nth-child(even)
          background-color: #f6e7ec

    .minute
      fontTitle()
      height: 100%
      width: 70px
      line-height: 60px
      font-size: 28px
      float: left

    .left-rivals-ocassion
    .right-rivals-ocassion
      height: 100%
      width: 305px
      line-height: 60px
      float: left

    .right-rivals-ocassion
      .ocassion-inner
        float: right

    .ocassion-inner
      width: 230px
      height: 100%

      .icon-wrapper
        float: left
        height: 100%
        width: 40px

      .icon
        line-height: 60px
        margin: 17px 0 0 0

        &.goal
          imgSprite(pic_red_ball)

        &.yellow-card
          imgSprite(pic_yellow_card)

        &.red-card
          imgSprite(pic_red_card)

  .current-match-table-right
    border-top: 1px solid $white
    border-bottom: 2px solid $red

    .table-head
      padding: 0 10px

    .teams
      position: relative
      height: 100px
      background-color: $white

      .team-item
        float: left
        width: 50%
        height: 100%
        box-sizing: border-box
        padding: 10px 0 0 0
        cursor: pointer

        &:hover
          span
            color: $green

      .logo-wrapper
        position: relative
        width: 100%
        height: 50px
        line-height: 70px
        text-align: center

      span
        color: $red
        display: block
        width: 100%
        margin: 5px 0 0 0
        text-align: center

    .team
      &.right-team
        display: none

      li
        height: 25px
        line-height: 28px
        overflow: hidden
        background-color: $white
        border-top: 1px solid $red
        box-sizing: border-box

        &:nth-child(odd)
          background-color: #f6e7ec

        a
          display: block
          width: 100%
          height: 100%
          color: $black

          &:hover
            background-color: $green
            color: $white

        .number
          float: left
          text-align: right
          width: 40px
          padding: 0 15px 0 0
          box-sizing: border-box

  .current-match-buttons
    position: absolute
    bottom: -35px
    width: 100%

    .collapse-button
      margin: 0

    .view-full-coverage-button
      color: $red
      position: absolute
      top: 4px
      right: 0
      cursor: pointer

      &:hover
        color: $green
