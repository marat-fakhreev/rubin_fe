.current-match-information
.match-result
  position: relative

  .match-inner
    min-height: 190px
    height: 190px
    overflow: hidden

    .match-container
      gradient($black, #414141)
      height: 100%
      background-color: grey
      transform: skewY(-1deg)
      position: relative
      top: -5px

      .match-slider
        width: 100%
        height: 125px
        padding: 40px 0
        transform: skewY(1deg)

    .green-bottom-line
      imgSprite(green_ui_line_bottom)
      position: absolute
      left: 50%
      bottom: -7px
      margin-left: -550px

  .match-item
    z-index: 10
    position: relative
    padding: 10px 0 0 0
    box-sizing: border-box
    height: 100%
    width: 100%

    .rivals
    .title
      margin: 0 auto

    .date
    .time
    .place
    .tickets
      fontPageTitle()
      display: block
      text-align: center

    .date
    .time
      color: $green

    .place
      margin: 3px 0 0 0
      color: $white
      font-size: 16px
      text-transform: none

    .tickets
      margin: 13px 0 0 0
      color: $red

  .rivals
    position: absolute
    left: 0
    top: 0
    right: 0
    bottom: 0

  .rivals-item
    position: absolute
    height: 100%
    padding: 10px 0 0 0
    box-sizing: border-box
    width: 150px
    text-align: center

    .logo-wrapper
      position: relative
      width: 100%
      height: 100%
      line-height: 130px

    span
      position: absolute
      bottom: 0px
      text-align: center
      display: block
      width: 100%
      color: $white

    &:first-child
      left: 50px

    &:last-child
      right: 50px

.current-match-information
  margin: 0 0 60px 0

  .match-inner
    min-height: 250px
    height: 250px
    overflow: hidden

  .match-item
    .current-date
    .match-time
    .live-text
      fontPageTitle()
      display: block
      text-align: center

    .current-date
    .live-text
      fontGreyCaption()
      font-size: 16px
      text-transform: none

    .match-time
      margin: 50px 0 0 0
      font-size: 75px
      text-shadow: 1px 1px 1px $black

    .live-text
      position: absolute
      left: 10px

  .rivals
    .current-rivals-item
      padding: 70px 0 0 0

      &:first-child
        left: 200px

      &:last-child
        right: 200px

  .score-item
    position: absolute
    fontPageTitle()
    font-size: 75px
    color: $white

    &.left-item
      float: left
      left: -90px

    &.right-item
      right: -90px

  .logo-wrapper
    span
      bottom: -120px
