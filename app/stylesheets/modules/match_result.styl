.match-result
  position: relative

  .match-inner
    min-height: 190px
    height: 190px
    overflow: hidden

    .match-container
      gradient($black, #414141)
      height: 100%
      background-color: grey
      transform: skewY(-1deg)
      position: relative
      top: -5px

      .match-slider
        width: 100%
        height: 125px
        padding: 40px 0
        transform: skewY(1deg)

    .green-bottom-line
      imgSprite(green_ui_line_bottom)
      position: absolute
      left: 50%
      bottom: -7px
      margin-left: -550px
