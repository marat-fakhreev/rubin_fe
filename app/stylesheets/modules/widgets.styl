.widget
  position: relative

  &::after
    content: ''
    top: 10px
    right: 10px
    position: absolute
    imgSprite(edit_white)


.twitter-widget
  background: #efefe7
  background: -moz-linear-gradient(45deg,  #efefe7 0%, #ffffff 40%, #ffffff 60%, #e0e0e0 100%)
  background: -webkit-gradient(linear, left bottom, right top, color-stop(0%,#efefe7), color-stop(40%,#ffffff), color-stop(60%,#ffffff), color-stop(100%,#e0e0e0))
  background: -webkit-linear-gradient(45deg,  #efefe7 0%,#ffffff 40%,#ffffff 60%,#e0e0e0 100%)
  background: -o-linear-gradient(45deg,  #efefe7 0%,#ffffff 40%,#ffffff 60%,#e0e0e0 100%)
  background: -ms-linear-gradient(45deg,  #efefe7 0%,#ffffff 40%,#ffffff 60%,#e0e0e0 100%)
  background: linear-gradient(45deg,  #efefe7 0%,#ffffff 40%,#ffffff 60%,#e0e0e0 100%)
  padding: 10px

  .on-twitter
    fontTitle()
    position: relative
    font-size: 17px
    padding: 0 30px 0 0

    &::after
      content: ''
      position: absolute
      right: 0
      top: -5px
      imgSprite(icon_red_tw)
      transform: scale(0.7)

  &::after
    imgSprite(edit_red)

  ul
    li
      clearfix()
      display: block
      float: none
      margin: 0
      padding: 12px 0
      border-bottom: 1px solid $green

  .tw-picture
    imgSprite(tw_default_pic)
    float: left
    margin: 0 10px 0 0
    overflow: hidden

  .tw-content
    width: 235px
    float: left
    text-align: justify

    .title
      float: left

    .date
      float: right

    .text
      padding: 4px 0 0 0
      clear: both
      color: $red

.rubin-tv-widget
  margin: 30px 0 0 0

  a
    display: block

  .image-wrapper
    width: 100%
    height: 125px
    overflow: hidden
    margin: 10px 0

  .image
    width: 100%
    height: 100%
    background-size: cover
    transform: scale(1)
    transition: transform 0.5s ease

  &::after
    imgSprite(edit_red)
    top: 0
    right: 0

.score-widget
  margin: 30px 0 0 0
  width: 225px
  height: 225px
  background-color: $black

  .slider
    position: relative

  .score-item
    height: 100%
    width: 100%
    box-sizing: border-box

    .rivals-item
      padding: 25px 0 0 0
      width: 50%
      height: 70px
      float: left
      text-align: center
      line-height: 70px

    img
      height: auto
      max-width: 55px
      max-height: 55px

  .score
    fontPageTitle()
    font-size: 36px
    width: 100%
    text-align: center
    position: absolute
    top: 110px

  .title
    fontBlackCaption()
    position: absolute
    bottom: 18px
    left: 0
    right: 0
    display: block
    text-align: center
    color: $white

  .fotorama__wrap
    .fotorama__arr
      &.fotorama__arr--prev
      &.fotorama__arr--next
        top: 135px
