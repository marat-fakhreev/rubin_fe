.widget
  position: relative
  margin: 30px 0 0 0

  &::after
    content: ''
    top: 10px
    right: 10px
    position: absolute
    imgSprite(edit_white)

.breaking-widget
  margin: 20px 0 0 0
  height: auto

  ul
    li
      display: block
      box-sizing: border-box
      border-bottom: 1px solid $lightRed

      p
        color: $red
        padding: 0 0 25px 0

      &:first-child
        .breaking-item
          padding: 0 0 15px 0

      &:last-child
        border-bottom: none

      &:hover
        p
          color: $green

  .breaking-item
    padding: 15px 0
    display: block
    position: relative
    color: $red

    .image-container
      padding: 0 0 30px 0
      position: relative

    .image-title
      position: absolute
      height: 27px
      background-color: rgba($black, 0.5)
      left: 0
      right: 0
      bottom: 30px
      z-index: 10
      line-height: 30px
      padding: 0 10px
      color: $white

    .image-wrapper
      width: 100%
      height: 90px
      overflow: hidden

    .image
      width: 100%
      height: 100%
      background-size: cover
      transform: scale(1)
      transition: transform 0.5s ease

    &.with-image
      padding: 0 0 15px 0

    &:hover
      .image-title
        color: $green

      .image
        transform: scale(1.2)
        transition: transform 0.5s ease

    &::before
      content: ''
      display: block
      position: absolute
      top: -1px
      left: -9px
      z-index: 50

    &.academy
      padding-top: 20px

      &::before
        imgSprite(ribbon_academy)
    &.club
      padding-top: 20px

      &::before
        imgSprite(ribbon_club)
    &.kamaz
      padding-top: 20px

      &::before
        imgSprite(ribbon_kamaz)
    &.neftekhimik
      padding-top: 20px

      &::before
        imgSprite(ribbon_neftekhimik)
    &.rubin-2
      padding-top: 20px

      &::before
        imgSprite(ribbon_rubin_2)
    &.rubin-m
      padding-top: 20px

      &::before
        imgSprite(ribbon_rubin_m)
    &.team
      padding-top: 20px

      &::before
        imgSprite(ribbon_team)

  .buttons
    width: 100%
    position: absolute
    bottom: 18px
    left: 0px
    box-sizing: border-box

  .date
    float: right
    color: $greyThree

  .audio,
  .video,
  .photo
    position: relative
    right: 0
    float right
    margin: 0 0 0 5px

  .shares
    color: $greyThree

    &::before
      imgSprite(share_red)

.related-news-widget
  @extend .breaking-widget
  margin: 0

  ul
    border-top: 2px solid $lightRed

    li
      &:first-child
        .breaking-item
          padding: 15px 0

      p
        margin: 0

.twitter-widget
  background: #efefe7
  background: -moz-linear-gradient(45deg,  #efefe7 0%, #ffffff 40%, #ffffff 60%, #e0e0e0 100%)
  background: -webkit-gradient(linear, left bottom, right top, color-stop(0%,#efefe7), color-stop(40%,#ffffff), color-stop(60%,#ffffff), color-stop(100%,#e0e0e0))
  background: -webkit-linear-gradient(45deg,  #efefe7 0%,#ffffff 40%,#ffffff 60%,#e0e0e0 100%)
  background: -o-linear-gradient(45deg,  #efefe7 0%,#ffffff 40%,#ffffff 60%,#e0e0e0 100%)
  background: -ms-linear-gradient(45deg,  #efefe7 0%,#ffffff 40%,#ffffff 60%,#e0e0e0 100%)
  background: linear-gradient(45deg,  #efefe7 0%,#ffffff 40%,#ffffff 60%,#e0e0e0 100%)
  padding: 10px

  .on-twitter
    fontTitle()
    position: relative
    font-size: 17px
    padding: 0 30px 0 0

    &::after
      content: ''
      position: absolute
      right: 0
      top: -5px
      imgSprite(icon_red_tw)
      transform: scale(0.7)

  &::after
    imgSprite(edit_red)

  ul
    li
      clearfix()
      display: block
      float: none
      margin: 0
      padding: 12px 0
      border-bottom: 1px solid $green

  .tw-picture
    imgSprite(tw_default_pic)
    float: left
    margin: 0 10px 0 0
    overflow: hidden

  .tw-content
    width: 235px
    float: left
    text-align: justify

    .title
      float: left

    .date
      float: right

    .text
      padding: 4px 0 0 0
      clear: both
      color: $red

.twitter-widget-small
  @extend .twitter-widget

  .tw-content
    width: auto

.rubin-tv-widget
  margin: 30px 0 0 0

  a
    display: block

  .image-wrapper
    width: 100%
    height: 125px
    overflow: hidden
    margin: 10px 0

  .image
    width: 100%
    height: 100%
    background-size: cover
    transform: scale(1)
    transition: transform 0.5s ease

  &::after
    imgSprite(edit_red)
    top: 0
    right: 0

.score-widget
  margin: 30px 0 0 0
  width: 225px
  height: 225px
  background-color: $black

  .slider
    position: relative

  .score-item
    height: 100%
    width: 100%
    box-sizing: border-box

    .rivals-item
      padding: 25px 0 0 0
      width: 50%
      height: 70px
      float: left
      text-align: center
      line-height: 70px

    img
      height: auto
      max-width: 55px
      max-height: 55px

  .score
    fontPageTitle()
    font-size: 36px
    width: 100%
    text-align: center
    position: absolute
    top: 110px

  .title
    fontBlackCaption()
    position: absolute
    bottom: 18px
    left: 0
    right: 0
    display: block
    text-align: center
    color: $white

  .fotorama__wrap
    .fotorama__arr
      &.fotorama__arr--prev
      &.fotorama__arr--next
        top: 135px

.advertisement
  margin: 30px 0 0 0

  span
    color: $greyTwo
    display: block
    margin: 0 0 3px 0

  .image
    width: 180px
    height: 125px
    background-size: cover
    transform: scale(1)
    transition: transform 0.5s ease

